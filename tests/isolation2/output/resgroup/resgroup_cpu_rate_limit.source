-- plcontainer busy function.
CREATE OR REPLACE FUNCTION plbusy() RETURNS VOID AS $$ # container: plc_python_shared n=100000000000 p=2 while p <= n: for i in range(2, p): if p%i == 0: p=p+1 p=p+1 $$ LANGUAGE plcontainer;
